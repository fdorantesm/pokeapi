{
  "name": "pokeapi",
  "type": "commonjs",
  "version": "1.0.0",
  "description": "",
  "author": "Fernando Dorantes <fernando@dorant.es>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:bun": "nest start --watch --exec \"bun run\"",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,test}/**/*.ts\" --fix",
    "lint:staged": "lint-staged",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --runInBand",
    "hello": "docker-compose up -d",
    "bye": "docker-compose down",
    "compodoc": "compodoc -p tsconfig.json --theme material --output docs",
    "compodoc:serve": "serve -p 6521 docs",
    "docker:publish": "dotenv ./docker.sh"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.1",
    "@nestjs/common": "^10.2.7",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.7",
    "@nestjs/cqrs": "^10.2.6",
    "@nestjs/devtools-integration": "^0.1.5",
    "@nestjs/mongoose": "^10.0.1",
    "@nestjs/platform-express": "^10.2.7",
    "@nestjs/swagger": "^7.1.13",
    "@supercharge/promise-pool": "^3.1.0",
    "axios": "^1.6.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "connection-string": "^4.4.0",
    "express-rate-limit": "^7.1.1",
    "helmet": "^7.0.0",
    "http-status-codes": "^2.3.0",
    "joi": "^17.11.0",
    "json-logger-service": "^9.0.1",
    "lodash": "^4.17.21",
    "luxon": "^3.4.3",
    "mongoose": "^7.6.3",
    "mongoose-anonymoose": "^1.0.0",
    "mongoose-paginate": "^5.0.3",
    "mongoose-query-parser": "^1.3.1",
    "nestjs-uuid": "^0.0.6",
    "pug": "^3.0.2",
    "ramda": "^0.29.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "slug": "^8.2.3",
    "slugify": "^1.6.6",
    "swagger-ui-express": "^5.0.0",
    "utility": "^1.18.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.18",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.7",
    "@types/express": "^4.17.20",
    "@types/jest": "29.5.6",
    "@types/luxon": "^3.3.3",
    "@types/mongoose-paginate": "^5.0.14",
    "@types/nedb": "^1.8.16",
    "@types/node": "20.10.0",
    "@types/supertest": "^2.0.14",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-hexagonal-architecture": "^1.0.3",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-yml": "^1.10.0",
    "faker": "5.5.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.1",
    "nedb-promises": "^6.2.3",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/test/"
    ],
    "moduleNameMapper": {
      "^@/(.*)": "<rootDir>/src/$1",
      "^#/(.*)": "<rootDir>/test/$1"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  }
}
